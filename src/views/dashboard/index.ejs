<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
      <i class="fas fa-home text-blue-600"></i> Dashboard
    </h1>
    <p class="text-gray-600">Welcome back, <%= user.username %>!</p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 bg-blue-100 rounded-lg">
          <i class="fas fa-folder text-2xl text-blue-600"></i>
        </div>
        <div class="ml-4">
          <p class="text-gray-600">Folders</p>
          <p class="text-2xl font-bold text-gray-800"><%= folders.length %></p>
        </div>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 bg-green-100 rounded-lg">
          <i class="fas fa-layer-group text-2xl text-green-600"></i>
        </div>
        <div class="ml-4">
          <p class="text-gray-600">Sets</p>
          <p class="text-2xl font-bold text-gray-800"><%= sets.length %></p>
        </div>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
      <div class="flex items-center">
        <div class="p-3 bg-purple-100 rounded-lg">
          <i class="fas fa-brain text-2xl text-purple-600"></i>
        </div>
        <div class="ml-4">
          <p class="text-gray-600">Study Today</p>
          <p class="text-2xl font-bold text-gray-800">0</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white p-6 rounded-lg shadow mb-8">
    <h2 class="text-xl font-bold text-gray-800 mb-4">
      <i class="fas fa-bolt text-yellow-500"></i> Quick Actions
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <a href="/folders/create" class="bg-blue-500 text-white px-4 py-3 rounded-lg hover:bg-blue-600 transition text-center">
        <i class="fas fa-folder-plus"></i> New Folder
      </a>
      <a href="/sets/create" class="bg-green-500 text-white px-4 py-3 rounded-lg hover:bg-green-600 transition text-center">
        <i class="fas fa-plus-circle"></i> New Set
      </a>
      <a href="/sets" class="bg-purple-500 text-white px-4 py-3 rounded-lg hover:bg-purple-600 transition text-center">
        <i class="fas fa-book"></i> Browse Sets
      </a>
      <a href="/folders" class="bg-indigo-500 text-white px-4 py-3 rounded-lg hover:bg-indigo-600 transition text-center">
        <i class="fas fa-folder-open"></i> Browse Folders
      </a>
    </div>
  </div>

  <!-- Recent Sets -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-xl font-bold text-gray-800 mb-4">
      <i class="fas fa-clock text-blue-500"></i> Recent Sets
    </h2>
    
    <% if (sets.length === 0) { %>
      <div class="text-center py-8 text-gray-500">
        <i class="fas fa-inbox text-4xl mb-4"></i>
        <p>No sets yet. Create your first set to get started!</p>
        <a href="/sets/create" class="inline-block mt-4 bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600">
          <i class="fas fa-plus"></i> Create Set
        </a>
      </div>
    <% } else { %>
      <div class="space-y-4">
        <% sets.slice(0, 5).forEach(set => { %>
          <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3">
              <div class="flex-1">
                <h3 class="font-semibold text-gray-800 mb-1">
                  <a href="/sets/<%= set.id %>" class="hover:text-blue-600">
                    <%= set.name %>
                  </a>
                </h3>
                <% if (set.description) { %>
                  <p class="text-gray-600 text-sm mb-2"><%= set.description %></p>
                <% } %>
                <div class="flex items-center text-sm text-gray-500 space-x-4">
                  <% if (set.folder_name) { %>
                    <span>
                      <i class="fas fa-folder"></i> <%= set.folder_name %>
                    </span>
                  <% } %>
                  <span>
                    <i class="fas fa-calendar"></i> <%= new Date(set.created_at).toLocaleDateString() %>
                  </span>
                </div>
              </div>
              <div class="flex gap-2 sm:ml-4">
                <a href="/sets/<%= set.id %>/study" class="flex-1 sm:flex-initial text-center bg-blue-500 text-white px-3 py-2 rounded text-sm hover:bg-blue-600 whitespace-nowrap">
                  <i class="fas fa-book-reader"></i> Study
                </a>
                <a href="/sets/<%= set.id %>" class="flex-1 sm:flex-initial text-center bg-gray-200 text-gray-700 px-3 py-2 rounded text-sm hover:bg-gray-300 whitespace-nowrap">
                  <i class="fas fa-eye"></i> View
                </a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      
      <% if (sets.length > 5) { %>
        <div class="mt-4 text-center">
          <a href="/sets" class="text-blue-600 hover:text-blue-700">
            View all sets <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      <% } %>
    <% } %>
  </div>
</div>
