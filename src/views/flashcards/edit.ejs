<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <a href="/sets/<%= flashcard.set_id %>" class="text-blue-600 hover:underline">
      <i class="fas fa-arrow-left"></i> Back to Set
    </a>
  </div>

  <div class="bg-white p-8 rounded-lg shadow">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">
      <i class="fas fa-edit text-blue-600"></i> Edit Flashcard
    </h1>

    <form action="/flashcards/<%= flashcard.id %>/edit" method="POST">
      <div class="mb-6">
        <label for="word" class="block text-gray-700 font-semibold mb-2">
          Term (Question) <span class="text-red-500">*</span>
        </label>
        <textarea 
          id="word" 
          name="word" 
          rows="4"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
          autofocus
        ><%= flashcard.word %></textarea>
        <p class="text-sm text-gray-500 mt-2">The front side of the flashcard (supports multi-line text)</p>
      </div>

      <div class="mb-6">
        <label for="definition" class="block text-gray-700 font-semibold mb-2">
          Definition <span class="text-red-500">*</span>
        </label>
        <textarea 
          id="definition" 
          name="definition" 
          rows="6"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        ><%= flashcard.definition %></textarea>
        <p class="text-sm text-gray-500 mt-2">The back side of the flashcard (supports Markdown)</p>
      </div>

      <div class="mb-6">
        <label for="note" class="block text-gray-700 font-semibold mb-2">
          Personal Note
        </label>
        <textarea 
          id="note" 
          name="note" 
          rows="4"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          placeholder="Add your personal notes about this flashcard (optional)"
        ><%= userNote ? userNote.note : '' %></textarea>
        <p class="text-sm text-gray-500 mt-2">
          Your private notes - only you can see these (supports Markdown)
        </p>
      </div>

      <div class="mb-6">
        <label class="flex items-center">
          <input 
            type="checkbox" 
            name="is_starred" 
            value="1"
            <%= flashcard.is_starred ? 'checked' : '' %>
            class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          >
          <span class="ml-3 text-gray-700">
            <i class="fas fa-star text-yellow-500"></i> Star this flashcard
          </span>
        </label>
        <p class="text-sm text-gray-500 mt-2 ml-8">
          Mark important flashcards to study them separately
        </p>
      </div>

      <div class="flex space-x-4">
        <button 
          type="submit" 
          class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition"
        >
          <i class="fas fa-save"></i> Save Changes
        </button>
        <a 
          href="/sets/<%= flashcard.set_id %>" 
          class="bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition"
        >
          <i class="fas fa-times"></i> Cancel
        </a>
      </div>
    </form>
  </div>

  <!-- Learning Progress Info -->
  <% if (progress) { %>
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="font-semibold text-gray-800 mb-3">
        <i class="fas fa-chart-line text-blue-600"></i> Learning Progress
      </h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
        <div>
          <p class="text-gray-600">Ease Factor</p>
          <p class="text-lg font-bold text-gray-800"><%= progress.ease_factor.toFixed(2) %></p>
        </div>
        <div>
          <p class="text-gray-600">Interval</p>
          <p class="text-lg font-bold text-gray-800"><%= progress.interval %> days</p>
        </div>
        <div>
          <p class="text-gray-600">Consecutive</p>
          <p class="text-lg font-bold text-gray-800"><%= progress.consecutive_correct %></p>
        </div>
        <div>
          <p class="text-gray-600">Next Review</p>
          <p class="text-lg font-bold text-gray-800">
            <%= new Date(progress.next_review_date).toLocaleDateString() %>
          </p>
        </div>
      </div>
    </div>
  <% } %>

  <div class="mt-6 bg-gray-50 border border-gray-200 rounded-lg p-6">
    <h3 class="font-semibold text-gray-800 mb-3">
      <i class="fas fa-info-circle text-blue-600"></i> Markdown Reference
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
      <div>
        <p class="text-gray-600 mb-1"><code>**bold text**</code></p>
        <p class="text-gray-600 mb-1"><code>*italic text*</code></p>
        <p class="text-gray-600"><code>`code`</code></p>
      </div>
      <div>
        <p class="text-gray-600 mb-1"><code>[link text](url)</code></p>
        <p class="text-gray-600 mb-1"><code>- list item</code></p>
        <p class="text-gray-600"><code>1. numbered item</code></p>
      </div>
    </div>
  </div>
</div>
