<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Qi Learning App</title>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ§ </text></svg>">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .flashcard {
      perspective: 1000px;
    }
    .flashcard-inner {
      position: relative;
      width: 100%;
      height: 100%;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }
    .flashcard.flipped .flashcard-inner {
      transform: rotateY(180deg);
    }
    .flashcard-front, .flashcard-back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    .flashcard-back {
      transform: rotateY(180deg);
    }
  </style>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">
  <!-- Navigation -->
  <% if (isAuthenticated) { %>
  <nav class="bg-white shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center space-x-4">
          <a href="/dashboard" class="text-2xl font-bold text-blue-600">
            <i class="fas fa-brain"></i> Qi
        </a>
          <div class="hidden md:flex space-x-4">
            <a href="/dashboard" class="text-gray-700 hover:text-blue-600">
              <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="/folders" class="text-gray-700 hover:text-blue-600">
              <i class="fas fa-folder"></i> Folders
            </a>
            <a href="/sets" class="text-gray-700 hover:text-blue-600">
              <i class="fas fa-layer-group"></i> Sets
            </a>
            <a href="/shares/my-shares" class="text-gray-700 hover:text-blue-600">
              <i class="fas fa-handshake"></i> My Shares
            </a>
            <% if (user.is_admin) { %>
            <a href="/admin" class="text-gray-700 hover:text-blue-600">
              <i class="fas fa-user-shield"></i> Admin
            </a>
            <% } %>
          </div>
        </div>
        
        <div class="flex items-center space-x-2 md:space-x-4">
          <span class="hidden md:inline text-gray-700">
            <i class="fas fa-user"></i> <%= user.username %>
          </span>
          <a href="/auth/change-password" class="hidden md:inline text-gray-700 hover:text-blue-600">
            <i class="fas fa-key"></i>
          </a>
          <a href="/auth/logout" class="hidden md:inline bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
          <!-- Mobile hamburger button -->
          <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-blue-600 p-2">
            <i class="fas fa-bars text-2xl"></i>
          </button>
        </div>
      </div>
      
      <!-- Mobile menu - Hidden by default -->
      <div id="mobile-menu" class="md:hidden pb-4 hidden">
        <div class="border-t pt-4">
          <a href="/dashboard" class="block py-2 text-gray-700 hover:text-blue-600">
            <i class="fas fa-home"></i> Dashboard
          </a>
          <a href="/folders" class="block py-2 text-gray-700 hover:text-blue-600">
            <i class="fas fa-folder"></i> Folders
          </a>
          <a href="/sets" class="block py-2 text-gray-700 hover:text-blue-600">
            <i class="fas fa-layer-group"></i> Sets
          </a>
          <a href="/shares/my-shares" class="block py-2 text-gray-700 hover:text-blue-600">
            <i class="fas fa-handshake"></i> My Shares
          </a>
          <% if (user.is_admin) { %>
          <a href="/admin" class="block py-2 text-gray-700 hover:text-blue-600">
            <i class="fas fa-user-shield"></i> Admin
          </a>
          <% } %>
          <div class="border-t mt-2 pt-2">
            <div class="py-2 text-gray-700">
              <i class="fas fa-user"></i> <%= user.username %>
            </div>
            <a href="/auth/change-password" class="block py-2 text-gray-700 hover:text-blue-600">
              <i class="fas fa-key"></i> Change Password
            </a>
            <a href="/auth/logout" class="block py-2 text-red-600 hover:text-red-700 font-semibold">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <% } %>

  <!-- Flash Messages -->
  <% if (flash.error && flash.error.length > 0) { %>
    <div class="container mx-auto px-4 mt-4">
      <% flash.error.forEach(msg => { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-2">
          <%= msg %>
        </div>
      <% }); %>
    </div>
  <% } %>

  <% if (flash.success && flash.success.length > 0) { %>
    <div class="container mx-auto px-4 mt-4">
      <% flash.success.forEach(msg => { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-2">
          <%= msg %>
        </div>
      <% }); %>
    </div>
  <% } %>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8 flex-1">
    <%- body %>
  </main>

  <!-- Footer -->
      <footer class="bg-white border-t border-gray-200 mt-8">
      <div class="container mx-auto px-4 py-4 text-center text-gray-600">
      <p>&copy; 2025 Qi Learning App. All rights reserved.</p>
      </div>
    </footer>

  <script>
    // Auto-hide flash messages after 5 seconds
    setTimeout(() => {
      const alerts = document.querySelectorAll('[class*="bg-red-100"], [class*="bg-green-100"]');
      alerts.forEach(alert => {
        alert.style.opacity = '0';
        alert.style.transition = 'opacity 0.5s';
        setTimeout(() => alert.remove(), 500);
      });
    }, 5000);

    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        const icon = this.querySelector('i');
        if (mobileMenu.classList.contains('hidden')) {
          icon.classList.remove('fa-times');
          icon.classList.add('fa-bars');
        } else {
          icon.classList.remove('fa-bars');
          icon.classList.add('fa-times');
        }
      });
    }
  </script>
</body>
</html>
