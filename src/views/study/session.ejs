<div class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-6" id="study-container">
  <div class="mb-4 sm:mb-6 hide-in-fullscreen" id="header-section">
    <div class="flex justify-between items-center">
      <div class="flex-1 min-w-0">
        <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-800 mb-1 sm:mb-2 cursor-pointer hover:text-blue-600 transition truncate" onclick="goBackToSet()">
          <i class="fas fa-arrow-left text-blue-600 text-base sm:text-xl"></i> <%= title %>
        </h1>
        <p class="text-xs sm:text-sm lg:text-base text-gray-600">
          <% if (studyType === 'long_term') { %>
            Long-term learning with spaced repetition
          <% } else if (studyType === 'random_all') { %>
            Random practice - All cards
          <% } else { %>
            Random practice - Starred cards only
          <% } %>
        </p>
      </div>
    </div>
  </div>

  <% if (!flashcards || flashcards.length === 0) { %>
    <!-- No flashcards -->
    <div class="bg-white p-12 rounded-lg shadow text-center">
      <i class="fas fa-check-circle text-6xl text-green-500 mb-4"></i>
      <h2 class="text-2xl font-bold text-gray-800 mb-2">All done!</h2>
      <p class="text-gray-600 mb-6">
        <% if (studyType === 'long_term') { %>
          No cards due for review right now. Come back later!
        <% } else { %>
          No flashcards available for this study mode.
        <% } %>
      </p>
      <a href="/dashboard" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
        <i class="fas fa-home"></i> Back to Dashboard
      </a>
    </div>
  <% } else { %>
    <!-- Stats Cards - Mobile First Responsive -->
    <div class="grid grid-cols-3 sm:grid-cols-5 gap-2 sm:gap-3 lg:gap-4 mb-4 sm:mb-6 hide-in-fullscreen" id="stats-section">
      <button onclick="filterCards('all')" id="stat-all" class="stat-card bg-white p-2 sm:p-3 lg:p-4 rounded-lg shadow hover:shadow-lg transition cursor-pointer border-2 border-blue-500 text-center">
        <p class="text-gray-600 text-xs sm:text-sm mb-0.5 sm:mb-1">Total</p>
        <p class="text-lg sm:text-xl lg:text-2xl font-bold text-gray-800" id="stat-total"><%= flashcards.length %></p>
      </button>
      <button onclick="filterCards('learned')" id="stat-learned" class="stat-card bg-white p-2 sm:p-3 lg:p-4 rounded-lg shadow hover:shadow-lg transition cursor-pointer border-2 border-transparent hover:border-green-500 text-center">
        <p class="text-gray-600 text-xs sm:text-sm mb-0.5 sm:mb-1">Learned</p>
        <p class="text-lg sm:text-xl lg:text-2xl font-bold text-green-600" id="stat-learned-count">0</p>
      </button>
      <button onclick="filterCards('learning')" id="stat-learning" class="stat-card bg-white p-2 sm:p-3 lg:p-4 rounded-lg shadow hover:shadow-lg transition cursor-pointer border-2 border-transparent hover:border-yellow-500 text-center">
        <p class="text-gray-600 text-xs sm:text-sm mb-0.5 sm:mb-1">Learning</p>
        <p class="text-lg sm:text-xl lg:text-2xl font-bold text-yellow-600" id="stat-learning-count">0</p>
      </button>
      <button onclick="filterCards('new')" id="stat-new" class="stat-card bg-white p-2 sm:p-3 lg:p-4 rounded-lg shadow hover:shadow-lg transition cursor-pointer border-2 border-transparent hover:border-blue-500 text-center">
        <p class="text-gray-600 text-xs sm:text-sm mb-0.5 sm:mb-1">New</p>
        <p class="text-lg sm:text-xl lg:text-2xl font-bold text-blue-600" id="stat-new-count">0</p>
      </button>
      <button onclick="filterCards('starred')" id="stat-starred" class="stat-card bg-white p-2 sm:p-3 lg:p-4 rounded-lg shadow hover:shadow-lg transition cursor-pointer border-2 border-transparent hover:border-yellow-500 text-center col-span-3 sm:col-span-1">
        <p class="text-gray-600 text-xs sm:text-sm mb-0.5 sm:mb-1">Stars</p>
        <p class="text-lg sm:text-xl lg:text-2xl font-bold text-yellow-500" id="stat-starred-count">0</p>
      </button>
    </div>

    <!-- Study Interface -->
    <div class="bg-white rounded-lg shadow p-3 sm:p-4 lg:p-6 mb-4" id="flashcard-section">
      <!-- Study Mode Selector -->
      <div class="mb-3 sm:mb-4 text-center hide-in-fullscreen" id="mode-selector-section">
        <div class="inline-flex rounded-lg border border-gray-300 overflow-hidden w-full sm:w-auto">
          <button 
            onclick="switchStudyMode('flashcard')" 
            id="mode-flashcard-btn"
            class="flex-1 sm:flex-none px-4 sm:px-6 py-2 sm:py-2.5 bg-white text-gray-700 text-sm sm:text-base font-medium transition hover:bg-gray-50"
          >
            <i class="fas fa-layer-group"></i> <span class="hidden xs:inline">Flashcard</span><span class="xs:hidden">Flash</span>
          </button>
          <button 
            onclick="switchStudyMode('multichoice')" 
            id="mode-multichoice-btn"
            class="flex-1 sm:flex-none px-4 sm:px-6 py-2 sm:py-2.5 bg-blue-600 text-white text-sm sm:text-base font-medium transition"
          >
            <i class="fas fa-list-ul"></i> <span class="hidden xs:inline">Multi-Choice</span><span class="xs:inline">Multi</span>
          </button>
        </div>
        <p class="text-xs sm:text-sm text-gray-500 mt-2" id="mode-hint">
          <i class="fas fa-info-circle"></i> <span id="mode-hint-text">Multi-choice mode active</span>
        </p>
      </div>

      <!-- Filter Info -->
      <div class="mb-3 sm:mb-4 text-center hide-in-fullscreen" id="filter-info-section">
        <span id="filter-info" class="text-xs sm:text-sm bg-blue-100 text-blue-800 px-3 sm:px-4 py-1.5 sm:py-2 rounded-full inline-block">
          <i class="fas fa-filter text-xs sm:text-sm"></i> <span class="hidden xs:inline">Showing:</span> All Cards
        </span>
      </div>

      <!-- Progress Bar -->
      <div class="mb-4 sm:mb-6" id="progress-section">
        <div class="flex justify-between items-center text-xs sm:text-sm text-gray-600 mb-2">
          <div class="flex items-center gap-2">
            <span>Progress</span>
            <% if (studyType === 'long_term') { %>
              <button 
                onclick="toggleRandomMode()" 
                id="random-toggle-btn"
                class="w-8 h-8 rounded-lg flex items-center justify-center transition hover:bg-gray-200"
                title="Toggle Random Order"
              >
                <i class="fas fa-random"></i>
              </button>
            <% } %>
          </div>
          <div class="flex items-center gap-3">
            <span><span id="current-card">1</span> / <span id="total-filtered"><%= flashcards.length %></span></span>
            <!-- Exit Focus Button (hidden by default, shown in focus mode) -->
            <button 
              onclick="toggleFocusMode()" 
              id="exit-focus-btn"
              class="bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-lg transition text-xs font-semibold hidden flex items-center gap-1.5"
              style="display: none;"
            >
              <i class="fas fa-times"></i>
              <span>Exit</span>
            </button>
          </div>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div id="progress-bar" class="bg-blue-600 h-2 rounded-full transition-all" style="width: <%= (1/flashcards.length)*100 %>%"></div>
        </div>
      </div>

      <!-- Flashcard -->
      <div id="flashcard-container" class="mb-2 sm:mb-3 relative">
        <!-- Star button - INSIDE flashcard container for proper positioning -->
        <button 
          onclick="toggleStar()" 
          id="star-btn-top"
          class="star-btn-corner unstarred"
          title="Toggle Star"
        >
          <i class="fas fa-star"></i>
        </button>
        
        <div class="flashcard">
          <div class="flashcard-inner">
            <div class="flashcard-front bg-blue-50 border-2 border-blue-200 rounded-lg">
              <div class="text-center w-full pt-4 sm:pt-6 lg:pt-8 h-full flex flex-col">
                <p id="flip-hint-front" class="text-xs sm:text-sm text-gray-500 mb-1 flex-shrink-0">
                  <i class="fas fa-sync-alt"></i> Click to flip
                </p>
                <div id="word-content" class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-800 overflow-y-auto flex-1 py-2 sm:py-3 lg:py-4 px-2 sm:px-4">
                  Loading...
                </div>
              </div>
            </div>
            
            <div class="flashcard-back bg-green-50 border-2 border-green-200 rounded-lg">
              <div class="text-center w-full pt-4 sm:pt-6 lg:pt-8 h-full flex flex-col">
                <p id="flip-hint-back" class="text-xs sm:text-sm text-gray-500 mb-1 flex-shrink-0">
                  <i class="fas fa-sync-alt"></i> Click to flip
                </p>
                <div id="definition-content" class="text-base sm:text-lg lg:text-xl text-gray-800 overflow-y-auto flex-1 px-2 sm:px-4">
                  Loading...
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- LEARN Button - Center positioned with gradient -->
      <div class="flex justify-center items-center mt-3 sm:mt-4" id="quick-actions">
        <button 
          onclick="toggleFocusMode()" 
          id="focus-btn"
          class="text-white px-8 sm:px-10 lg:px-12 py-3 sm:py-3.5 lg:py-4 rounded-lg sm:rounded-xl transition font-bold text-base sm:text-lg lg:text-xl flex items-center justify-center gap-2 sm:gap-3 shadow-xl hover:shadow-2xl transform hover:scale-105 w-full sm:w-auto"
          style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); max-width: 400px;"
        >
          <i class="fas fa-graduation-cap text-lg sm:text-xl lg:text-2xl"></i>
          <span>LEARN</span>
        </button>
      </div>

      <!-- Note Button -->
      <div class="mb-3 sm:mb-4 text-center hide-in-fullscreen" id="note-section">
        <button 
          onclick="showNoteDialog()" 
          id="note-btn"
          class="bg-yellow-100 hover:bg-yellow-200 text-yellow-800 px-3 sm:px-4 py-2 rounded-lg transition flex items-center gap-2 mx-auto text-sm sm:text-base"
          style="display: none;"
        >
          <i class="fas fa-sticky-note"></i>
          <span>View Note</span>
        </button>
      </div>

      <!-- Answer Buttons (for Flashcard mode in long_term study) -->
      <div id="answer-buttons-section">
        <% if (studyType === 'long_term') { %>
          <!-- Flashcard Mode: 4 buttons in a row (Prev | Incorrect | Correct | Next) -->
          <div id="flashcard-buttons-wrapper" class="flex justify-center items-center gap-1.5 sm:gap-2 lg:gap-4">
            <button 
              onclick="previousCard()" 
              id="flashcard-prev-btn"
              class="bg-gray-500 text-white py-2 sm:py-2.5 lg:py-3 px-2 sm:px-4 lg:px-6 rounded-md sm:rounded-lg hover:bg-gray-600 transition font-semibold flex items-center justify-center gap-1 sm:gap-2 text-xs sm:text-sm lg:text-base flex-1 sm:flex-initial min-w-0"
            >
              <i class="fas fa-arrow-left text-xs sm:text-sm"></i>
              <span class="hidden xs:inline truncate">Prev</span>
            </button>
            <button 
              onclick="submitAnswer(false)" 
              class="bg-red-500 text-white py-2 sm:py-2.5 lg:py-3 px-2 sm:px-4 lg:px-6 rounded-md sm:rounded-lg hover:bg-red-600 transition font-semibold flex items-center justify-center gap-1 sm:gap-2 text-xs sm:text-sm lg:text-base flex-1 min-w-0"
              id="incorrect-btn"
            >
              <i class="fas fa-times-circle text-xs sm:text-sm"></i>
              <span class="truncate">Incorrect</span>
            </button>
            <button 
              onclick="submitAnswer(true)" 
              class="bg-green-500 text-white py-2 sm:py-2.5 lg:py-3 px-2 sm:px-4 lg:px-6 rounded-md sm:rounded-lg hover:bg-green-600 transition font-semibold flex items-center justify-center gap-1 sm:gap-2 text-xs sm:text-sm lg:text-base flex-1 min-w-0"
              id="correct-btn"
            >
              <i class="fas fa-check-circle text-xs sm:text-sm"></i>
              <span class="truncate">Correct</span>
            </button>
            <button 
              onclick="nextCard()" 
              id="flashcard-next-btn"
              class="bg-blue-500 text-white py-2 sm:py-2.5 lg:py-3 px-2 sm:px-4 lg:px-6 rounded-md sm:rounded-lg hover:bg-blue-600 transition font-semibold flex items-center justify-center gap-1 sm:gap-2 text-xs sm:text-sm lg:text-base flex-1 sm:flex-initial min-w-0"
            >
              <i class="fas fa-arrow-right text-xs sm:text-sm"></i>
              <span class="hidden xs:inline truncate">Next</span>
            </button>
          </div>
        <% } else { %>
          <div class="flex space-x-2 sm:space-x-4">
            <button 
              onclick="nextCard()" 
              class="flex-1 bg-blue-500 text-white py-2.5 sm:py-3 rounded-lg hover:bg-blue-600 transition font-semibold flex items-center justify-center gap-2 text-sm sm:text-base"
            >
              <i class="fas fa-arrow-right"></i>
              <span>Next Card</span>
            </button>
          </div>
        <% } %>
      </div>

      <!-- Navigation Buttons (for multi-choice mode) -->
      <div id="navigation-buttons" class="flex flex-wrap justify-center items-center gap-2 sm:gap-3 lg:gap-4 mt-3 sm:mt-4" style="display: none;">
        <button 
          onclick="previousCard()" 
          id="prev-btn"
          class="bg-gray-500 text-white py-2 sm:py-2.5 lg:py-3 px-4 sm:px-5 lg:px-6 rounded-md sm:rounded-lg hover:bg-gray-600 transition font-semibold flex items-center gap-1.5 sm:gap-2 text-xs sm:text-sm lg:text-base"
        >
          <i class="fas fa-arrow-left"></i>
          <span>Previous</span>
        </button>
        <button 
          onclick="checkMultiChoiceAnswer()" 
          id="mc-check-answer-btn"
          class="bg-blue-600 text-white py-2 sm:py-2.5 lg:py-3 px-4 sm:px-5 lg:px-6 rounded-md sm:rounded-lg hover:bg-blue-700 transition font-semibold disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-1.5 sm:gap-2 text-xs sm:text-sm lg:text-base"
          disabled
          style="display: none;"
        >
          <i class="fas fa-check-circle"></i>
          <span class="hidden xs:inline">Check</span> Answer
        </button>
        <button 
          onclick="nextCard()" 
          id="next-btn"
          class="bg-blue-500 text-white py-2 sm:py-2.5 lg:py-3 px-4 sm:px-5 lg:px-6 rounded-md sm:rounded-lg hover:bg-blue-600 transition font-semibold flex items-center gap-1.5 sm:gap-2 text-xs sm:text-sm lg:text-base"
        >
          <i class="fas fa-arrow-right"></i>
          <span>Next</span>
        </button>
      </div>
    </div>
  <% } %>
</div>

