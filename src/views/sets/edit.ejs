<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <a href="/sets/<%= set.id %>" class="text-blue-600 hover:underline">
      <i class="fas fa-arrow-left"></i> Back to Set
    </a>
  </div>

  <div class="bg-white p-8 rounded-lg shadow">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">
      <i class="fas fa-edit text-blue-600"></i> Edit Set
    </h1>

    <form action="/sets/<%= set.id %>/edit" method="POST">
      <div class="mb-6">
        <label for="name" class="block text-gray-700 font-semibold mb-2">
          Set Name <span class="text-red-500">*</span>
        </label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="<%= set.name %>"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          required
        >
      </div>

      <div class="mb-6">
        <label for="description" class="block text-gray-700 font-semibold mb-2">
          Description
        </label>
        <textarea 
          id="description" 
          name="description" 
          rows="4"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
        ><%= set.description || '' %></textarea>
        <p class="text-sm text-gray-500 mt-2">Add a brief description about this set (optional)</p>
      </div>

      <div class="mb-6">
        <label for="folder_id" class="block text-gray-700 font-semibold mb-2">
          Folder
        </label>
        <select 
          id="folder_id" 
          name="folder_id"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
        >
          <option value="">No Folder</option>
          <% folders.forEach(folder => { %>
            <option value="<%= folder.id %>" <%= set.folder_id === folder.id ? 'selected' : '' %>>
              <%= folder.name %>
            </option>
          <% }); %>
        </select>
        <p class="text-sm text-gray-500 mt-2">Organize this set into a folder (optional)</p>
      </div>

      <div class="flex space-x-4">
        <button 
          type="submit" 
          class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition"
        >
          <i class="fas fa-save"></i> Save Changes
        </button>
        <a 
          href="/sets/<%= set.id %>" 
          class="bg-gray-200 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-300 transition"
        >
          <i class="fas fa-times"></i> Cancel
        </a>
      </div>
    </form>
  </div>
</div>
