<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-800">
        <i class="fas fa-layer-group text-blue-600"></i> My Sets
      </h1>
      <a href="/sets/create" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition">
        <i class="fas fa-plus"></i> Create New Set
      </a>
    </div>
  </div>

  <% if (sets.length === 0) { %>
    <!-- Empty State -->
    <div class="bg-white p-12 rounded-lg shadow text-center">
      <i class="fas fa-layer-group text-6xl text-gray-300 mb-4"></i>
      <h2 class="text-2xl font-bold text-gray-800 mb-2">No sets yet</h2>
      <p class="text-gray-600 mb-6">Create your first set to start learning!</p>
      <a href="/sets/create" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 text-lg">
        <i class="fas fa-plus"></i> Create Your First Set
      </a>
    </div>
  <% } else { %>
    <!-- Sets Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% sets.forEach(set => { %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition">
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-bold text-gray-800 flex-1">
                <a href="/sets/<%= set.id %>" class="hover:text-blue-600">
                  <%= set.name %>
                </a>
              </h3>
            </div>

            <% if (set.description) { %>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= set.description %></p>
            <% } %>

            <div class="flex items-center text-sm text-gray-500 space-x-4 mb-4">
              <% if (set.folder_name) { %>
                <span>
                  <i class="fas fa-folder"></i> <%= set.folder_name %>
                </span>
              <% } %>
              <span>
                <i class="fas fa-calendar"></i> <%= new Date(set.created_at).toLocaleDateString() %>
              </span>
            </div>

            <div class="flex space-x-2">
              <a href="/sets/<%= set.id %>/study" class="flex-1 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition text-center text-sm">
                <i class="fas fa-brain"></i> Study
              </a>
              <a href="/sets/<%= set.id %>" class="flex-1 bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition text-center text-sm">
                <i class="fas fa-eye"></i> View
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
