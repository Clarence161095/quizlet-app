<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <a href="/folders" class="text-blue-600 hover:underline">
      <i class="fas fa-arrow-left"></i> Back to Folders
    </a>
  </div>

  <div class="bg-white p-6 rounded-lg shadow mb-6">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          <i class="fas fa-folder-open text-yellow-500"></i> <%= folder.name %>
        </h1>
        <% if (folder.description) { %>
          <p class="text-gray-600"><%= folder.description %></p>
        <% } %>
        <p class="text-sm text-gray-500 mt-2">
          Created on <%= new Date(folder.created_at).toLocaleDateString() %>
        </p>
      </div>
      <div class="flex space-x-2">
        <a href="/folders/<%= folder.id %>/edit" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition">
          <i class="fas fa-edit"></i> Edit
        </a>
        <form action="/folders/<%= folder.id %>/delete" method="POST" class="inline">
          <button 
            type="submit" 
            class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition"
            onclick="return confirm('Are you sure? This will NOT delete the sets inside, just the folder organization.')"
          >
            <i class="fas fa-trash"></i> Delete
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">
      Sets in this folder (<%= sets.length %>)
    </h2>
  </div>

  <% if (sets.length === 0) { %>
    <!-- Empty State -->
    <div class="bg-white p-12 rounded-lg shadow text-center">
      <i class="fas fa-layer-group text-6xl text-gray-300 mb-4"></i>
      <h2 class="text-2xl font-bold text-gray-800 mb-2">No sets in this folder yet</h2>
      <p class="text-gray-600 mb-6">Create a new set and assign it to this folder!</p>
      <a href="/sets/create" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 text-lg">
        <i class="fas fa-plus"></i> Create New Set
      </a>
    </div>
  <% } else { %>
    <!-- Sets Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% sets.forEach(set => { %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition">
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-bold text-gray-800 flex-1">
                <a href="/sets/<%= set.id %>" class="hover:text-blue-600">
                  <%= set.name %>
                </a>
              </h3>
            </div>

            <% if (set.description) { %>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= set.description %></p>
            <% } %>

            <div class="flex items-center text-sm text-gray-500 mb-4">
              <span>
                <i class="fas fa-calendar"></i> <%= new Date(set.created_at).toLocaleDateString() %>
              </span>
            </div>

            <div class="flex space-x-2">
              <a href="/sets/<%= set.id %>/study" class="flex-1 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition text-center text-sm">
                <i class="fas fa-brain"></i> Study
              </a>
              <a href="/sets/<%= set.id %>" class="flex-1 bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition text-center text-sm">
                <i class="fas fa-eye"></i> View
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
