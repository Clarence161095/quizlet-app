<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-800">
        <i class="fas fa-folder text-yellow-600"></i> My Folders
      </h1>
      <a href="/folders/create" class="bg-yellow-600 text-white px-6 py-3 rounded-lg hover:bg-yellow-700 transition">
        <i class="fas fa-plus"></i> Create New Folder
      </a>
    </div>
  </div>

  <% if (folders.length === 0) { %>
    <!-- Empty State -->
    <div class="bg-white p-12 rounded-lg shadow text-center">
      <i class="fas fa-folder-open text-6xl text-gray-300 mb-4"></i>
      <h2 class="text-2xl font-bold text-gray-800 mb-2">No folders yet</h2>
      <p class="text-gray-600 mb-6">Create folders to organize your study sets!</p>
      <a href="/folders/create" class="inline-block bg-yellow-600 text-white px-8 py-3 rounded-lg hover:bg-yellow-700 text-lg">
        <i class="fas fa-plus"></i> Create Your First Folder
      </a>
    </div>
  <% } else { %>
    <!-- Folders Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% folders.forEach(folder => { %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition">
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-bold text-gray-800 flex-1">
                <a href="/folders/<%= folder.id %>" class="hover:text-yellow-600 flex items-center">
                  <i class="fas fa-folder text-yellow-500 mr-2"></i>
                  <%= folder.name %>
                </a>
              </h3>
            </div>

            <% if (folder.description) { %>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= folder.description %></p>
            <% } %>

            <div class="flex items-center justify-between text-sm mb-4">
              <span class="text-gray-600">
                <i class="fas fa-layer-group"></i> <%= folder.set_count || 0 %> set<%= folder.set_count !== 1 ? 's' : '' %>
              </span>
              <span class="text-gray-500">
                <i class="fas fa-calendar"></i> <%= new Date(folder.created_at).toLocaleDateString() %>
              </span>
            </div>

            <div class="flex space-x-2">
              <a href="/folders/<%= folder.id %>" class="flex-1 bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600 transition text-center text-sm">
                <i class="fas fa-eye"></i> View
              </a>
              <a href="/folders/<%= folder.id %>/edit" class="flex-1 bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300 transition text-center text-sm">
                <i class="fas fa-edit"></i> Edit
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
