<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <a href="/sets/<%= set.id %>" class="text-blue-600 hover:underline">
      <i class="fas fa-arrow-left"></i> Back to Set
    </a>
  </div>

  <div class="bg-white p-8 rounded-lg shadow">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
      <i class="fas fa-share-alt text-blue-600"></i> Share Set
    </h1>
    <p class="text-gray-600 mb-6">Share "<%= set.name %>" with other users</p>

    <form action="/shares/sets/<%= set.id %>/share" method="POST" class="mb-8">
      <div class="mb-4">
        <label for="username" class="block text-gray-700 font-semibold mb-2">
          Username <span class="text-red-500">*</span>
        </label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
          placeholder="Enter username to share with"
          required
          list="usernames"
        >
        <datalist id="usernames">
          <% users.forEach(u => { %>
            <option value="<%= u.username %>">
          <% }); %>
        </datalist>
        <p class="text-sm text-gray-500 mt-2">
          <i class="fas fa-info-circle"></i> The user will receive access to clone this set
        </p>
      </div>

      <div class="mb-6">
        <label class="flex items-start">
          <input 
            type="checkbox" 
            name="allow_export" 
            value="1"
            checked
            class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500 mt-1"
          >
          <div class="ml-3">
            <span class="text-gray-700 font-semibold">
              <i class="fas fa-download text-green-600"></i> Allow Export
            </span>
            <p class="text-sm text-gray-500 mt-1">
              If checked, recipient can export this set. If unchecked, they can only study it (no export, no editing).
            </p>
          </div>
        </label>
      </div>

      <button 
        type="submit" 
        class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-semibold"
      >
        <i class="fas fa-share"></i> Share Set
      </button>
    </form>

    <!-- Existing Shares -->
    <% if (existingShares.length > 0) { %>
      <div class="border-t pt-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
          <i class="fas fa-users"></i> Shared With
        </h2>
        <div class="space-y-3">
          <% existingShares.forEach(share => { %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div>
                <p class="font-semibold text-gray-800">
                  <i class="fas fa-user"></i> <%= share.username %>
                </p>
                <p class="text-sm text-gray-600">
                  Shared on <%= new Date(share.created_at).toLocaleString() %>
                </p>
                <% if (share.is_accepted) { %>
                  <span class="inline-block mt-1 px-2 py-1 bg-green-100 text-green-800 text-xs rounded">
                    <i class="fas fa-check-circle"></i> Accepted
                  </span>
                <% } else { %>
                  <span class="inline-block mt-1 px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded">
                    <i class="fas fa-clock"></i> Pending
                  </span>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } else { %>
      <div class="border-t pt-6 text-center text-gray-500">
        <i class="fas fa-share-alt text-4xl mb-2"></i>
        <p>Not shared with anyone yet</p>
      </div>
    <% } %>
  </div>
</div>
