<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <div class="text-center mb-8">
      <div class="inline-block p-4 bg-blue-100 rounded-full mb-4">
        <i class="fas fa-shield-alt text-4xl text-blue-600"></i>
      </div>
      <h1 class="text-2xl font-bold text-gray-800 mb-2">
        Two-Factor Authentication
      </h1>
      <p class="text-gray-600">Enter the code from your authenticator app</p>
    </div>

    <% if (message && message.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= message[0] %>
      </div>
    <% } %>

    <form action="/auth/mfa-verify" method="POST">
      <div class="mb-6">
        <label class="block text-gray-700 mb-2 text-center font-semibold" for="token">
          Verification Code
        </label>
        <input 
          type="text" 
          id="token" 
          name="token" 
          required
          maxlength="6"
          pattern="[0-9]{6}"
          class="w-full px-4 py-3 border-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-center text-3xl tracking-widest font-bold"
          placeholder="000000"
          autocomplete="off"
          autofocus
        >
        <p class="text-sm text-gray-500 mt-2 text-center">
          <i class="fas fa-clock"></i> Code expires every 30 seconds
        </p>
      </div>

      <button 
        type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition font-semibold text-lg"
      >
        <i class="fas fa-sign-in-alt"></i> Verify
      </button>
    </form>

    <div class="mt-6 text-center">
      <a href="/auth/logout" class="text-sm text-gray-600 hover:text-gray-800">
        <i class="fas fa-arrow-left"></i> Back to login
      </a>
    </div>
  </div>

  <script>
    // Auto-submit when 6 digits are entered
    const tokenInput = document.getElementById('token');
    
    tokenInput.addEventListener('input', function(e) {
      // Only allow numbers
      e.target.value = e.target.value.replace(/[^0-9]/g, '');
      
      // Auto-submit when 6 digits
      if (e.target.value.length === 6) {
        setTimeout(() => {
          e.target.form.submit();
        }, 200);
      }
    });

    // Focus on input
    tokenInput.focus();
  </script>
</body>
</html>
